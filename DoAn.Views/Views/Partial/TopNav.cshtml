<script>
	$(document).ready(function () {
		MenuDaCap('nhomsanphams/GetAll', '.grid .megapanel ul');
	});

	var urlRoot = 'http://localhost:52178/api/';
	function MenuDaCap(urlLink, index) {
		var chuoi = '';
		$.ajax({
			url: urlRoot + urlLink,
			dataType: 'Json',
			type: 'Get',
			success: function (data) {
				$(data).each(function (k, v) {
					if (v.TenNhom) {
						chuoi += '<li id="nh' + v.Id_Nhom + '"><a href="">' + v.TenNhom + '</a><ul></ul></li>';
						MenuDaCap('loaisanphams/GetAll/' + v.Id_Nhom, index + ' li#nh' + v.Id_Nhom + ' ul');
					} 
					else if (v.TenLoaiSp) {
						chuoi += '<li><a href="">' + v.TenLoaiSp + '</a></li>';
					}
				});
				$(index).append(chuoi);
			}
		});
	}
</script>